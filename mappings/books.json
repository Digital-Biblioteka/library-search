{
  "settings": {
    "analysis": {
      "analyzer": {
        "ru_en_standard": { "type": "standard" },
        "title_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase","asciifolding"]
        },
        "title_index": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase","asciifolding","edge_ngram_1_20"]
        }
      },
      "filter": {
        "edge_ngram_1_20": { "type": "edge_ngram", "min_gram": 1, "max_gram": 20 }
      }
    }
  },
  "mappings": {
    "properties": {
      "book_id": { "type": "keyword" },
      "title": {
        "type": "text",
        "analyzer": "title_index",
        "search_analyzer": "title_search",
        "fields": {
          "raw": { "type": "keyword", "ignore_above": 256 }
        }
      },
      "authors": { "type": "text", "analyzer": "title_index", "search_analyzer": "title_search" },
      "genres": { "type": "keyword" },
      "description": { "type": "text", "analyzer": "ru_en_standard" },
      "language": { "type": "keyword" },
      "year": { "type": "integer" },
      "rating_avg": { "type": "float" },
      "rating_count": { "type": "integer" },
      "access_level": { "type": "keyword" },
      "suggest": { "type": "completion" },
      "description_vector": { "type": "dense_vector", "dims": 384, "index": true, "similarity": "cosine" }
    }
  }
}
